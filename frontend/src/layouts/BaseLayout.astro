---
export interface Props {
	title?: string | undefined;
}

const { title } = Astro.props;

import "@fontsource/material-icons";
import "@fontsource/catamaran";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="../node_modules/font-awesome/css/font-awesome.css" rel="stylesheet"/>
		<title>{title}</title>
		<script
		type="module"
		src="node_modules/@material-tailwind/html@latest/scripts/popover.js"
	></script>
	 
	<!-- from cdn -->
	<script
		type="module"
		src="https://unpkg.com/@material-tailwind/html@latest/scripts/popover.js"
	></script>
	</head>
	<body class="bg-gradient-to-t from-lime-600/50 to-blue-200/70 pb-12 min-h-screen relative">
		<slot />
	</body>
</html>
