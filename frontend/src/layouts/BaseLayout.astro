---
export interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Catamaran:wght@500&family=Poppins:wght@200&family=Varela+Round&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-gradient-to-t from-lime-600/50 to-blue-200/70 pb-12 min-h-screen relative">
		<slot />
	</body>
</html>
