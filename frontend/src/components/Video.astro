---
import BaseCard from "../layouts/BaseCard.astro";
import type { Props } from "./RawVideo.astro";
import RawVideo from "./RawVideo.astro";

const { width, height, video, controls, autoplay, loop, className } =
    Astro.props;
---

<BaseCard class="mx-auto p-0 rounded-md w-fit">
    <RawVideo
        width={width}
        height={height}
        video={video}
        {controls}
        {autoplay}
        {loop}
        className={`rounded-md ${className}`}
    >
        <source src={video?.url} type={video?.mimeType} />
    </RawVideo>
</BaseCard>
