---
import type { Image } from "@/payload/payload-types";

interface Props {
    image: Image;
    caption: string;
}

const { image, caption } = Astro.props;
---

<div class="relative w-full grow">
    <img class="w-full h-full object-cover object-center" src={image.url} />
    <section
        class="absolute w-[400px] h-fit m-5 top-1/4 right-10 bg-white p-2 border-2 border-black"
    >
        {caption}
    </section>
</div>
